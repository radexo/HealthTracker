{
  "name": "healthtracker-2025",
  "version": "1.0.0",
  "description": "Профессиональное приложение для отслеживания показателей тела, тренировок и здоровья",
  "main": "main.js",
  "author": "HealthTracker Team",
  "license": "MIT",
  "homepage": ".",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-win32": "electron-builder --win --ia32",
    "build-win64": "electron-builder --win --x64",
    "dist": "electron-builder --publish=never",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "sqlite3": "^5.1.7",
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "electron": "^32.2.0",
    "electron-builder": "^25.1.8",
    "electron-rebuild": "^3.2.9"
  },
  "build": {
    "appId": "com.healthtracker.app",
    "productName": "HealthTracker 2025",
    "copyright": "Copyright © RADEXO 2025 HealthTracker Team",
    "directories": {
      "output": "dist"
    },
	"asar": false,
    "files": [
	  "**/*",
      "index.html",
      "style.css",
      "app.js",
      "electron/",
      "assets/",
      "node_modules/",
      "!node_modules/.cache"
    ],
    "extraResources": [
      {
        "from": "database/",
        "to": "database/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "publisherName": "HealthTracker Team",
      "verifyUpdateCodeSignature": false,
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "HealthTracker 2025",
      "include": "build/installer.nsh"
    },
    "portable": {
      "artifactName": "HealthTracker-2025-Portable-${version}-${arch}.${ext}"
    },
    "publish": {
      "provider": "generic",
      "url": "https://github.com/healthtracker/releases"
    }
  }
}